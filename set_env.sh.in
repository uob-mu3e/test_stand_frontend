
PREFIX=@CMAKE_INSTALL_PREFIX@
SOURCE=@PROJECT_SOURCE_DIR@
BINDIR=${PREFIX}/bin
BINDIRMIDAS=${SOURCE}/modules/midas/bin
LIBDIR=${PREFIX}/lib

export CMAKE_PREFIX_PATH="${PREFIX}${CMAKE_PREFIX_PATH:+:}${CMAKE_PREFIX_PATH}"
export LD_LIBRARY_PATH="${LIBDIR}${LD_LIBRARY_PATH:+:}${LD_LIBRARY_PATH}"
export PATH="${BINDIR}${PATH:+:}${PATH}"
export PATH=$PATH:${BINDIRMIDAS}
export PYTHONPATH="${PYTHONDIR}:${PYTHONARCHDIR}${PYTHONPATH:+:}${PYTHONPATH}"
if [[ "$OSTYPE" == "darwin"* ]]; then
        export DYLD_LIBRARY_PATH="${LIBDIR}${DYLD_LIBRARY_PATH:+:}${DYLD_LIBRARY_PATH}";
fi

export MIDASSYS="${PREFIX}"
export MIDAS_DIR="${SOURCE}/online"
export MIDAS_EXPTAB="${SOURCE}/online/exptab"
export MIDAS_EXP_NAME="Mu3e"

cd "$MIDAS_DIR"
ln -sf "${SOURCE}/modules/midas/resources"
ln -sf "${SOURCE}/modules/analyzer/mu3edisplay/config"
ln -sf "${SOURCE}/modules/analyzer/mu3edisplay/dist"
ln -sf "${SOURCE}/modules/analyzer/packages/rootana/examples"

ln -sf "${SOURCE}/mhttpd/custom/manalyzer/online_ana_setup.json"
ln -sf "${SOURCE}/mhttpd/custom/manalyzer/OnlineAna.js"
ln -sf "${SOURCE}/mhttpd/custom/manalyzer/OnlineAna.css"
ln -sf "${SOURCE}/mhttpd/custom/manalyzer/plotting_functions_jsroot.js"
ln -sf "${SOURCE}/mhttpd/custom/manalyzer/plotting_functions_nonroot.js"
ln -sf "${SOURCE}/mhttpd/custom/manalyzer/rootana_functions.js"

# bash or zsh require a rehash to pick up new commands
if test -n "${BASH}" -o -n "${ZSH_VERSION}"; then
    hash -r
fi
